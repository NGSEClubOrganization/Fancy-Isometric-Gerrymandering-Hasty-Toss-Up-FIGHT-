package com.ngse.fight.specials;

import net.md_5.bungee.api.ChatColor;

import org.bukkit.Location;
import org.bukkit.Material;
import org.bukkit.block.Block;
import org.bukkit.entity.Player;
import org.bukkit.inventory.ItemStack;
import org.bukkit.metadata.FixedMetadataValue;

import com.ngse.fight.FIGHT;
import com.ngse.fight.classes.Ability;
import com.ngse.fight.classes.PassiveAbility;
import com.ngse.utilities.Toggle;

public class Hover extends PassiveAbility {

	public Hover() {
		super("Hover", 2, true, "hov");
	}

	@Override
	public void effect(Player user, Player target) {
		effect(user);
	}

	@Override
	public void effect(Player user) {
		// toggle hovering
		if (user.hasMetadata(getName())) {
			user.setMetadata(getName(), new FixedMetadataValue(FIGHT.plugin,
					Toggle.fromMeta(user, getName()).toggle()));
			;
		} else {
			Toggle.setMetaToggle(user, getName(), true);
		}
	}

	@Override
	public ItemStack getItem() {
		return Ability.setupItem(Material.FEATHER, this);
	}

	@Override
	public void passiveEffect(Player user) {
		Player p = user;

		if (p.hasMetadata(getName())) {
			if (isActive(user)) {
				// logging
				p.sendMessage(getName());
				Location l = p.getLocation();
				Location below = l.add(0, -1, 0);

				if (!below.getBlock().getType().isSolid()) {
					// if the block is air, then set it to glass
					below.getBlock().setType(Material.GLASS);
					Toggle.setMetaToggle(below.getBlock(), "changed", true);
				}

				for (int x = -1; x <= 1; x++) {
					for (int y = -1; y <= 1; y++) {
						for (int z = -1; z <= 1; z++) {
							Location ln = below.add(x, y, z);
							if (ln.getBlock().getType().equals(Material.GLASS)) {
								ln.getBlock().removeMetadata("changed",
										FIGHT.plugin); 
								ln.getBlock().setType(Material.AIR);
								
							}

						}
					}
				}
			}

			if (Toggle.fromMeta(p, getName()).b) {
				p.sendMessage(ChatColor.LIGHT_PURPLE + "[HOVERING] "
						+ ChatColor.GREEN + "ON");
			} else {
				p.sendMessage(ChatColor.LIGHT_PURPLE + "[HOVERING] "
						+ ChatColor.RED + "OFF");
			}
		}
	}

	@Override
	public void endPassiveEffect(Player p) {
		Location l = p.getLocation();

		for (int x = -2; x <= 2; x++) {
			for (int z = -1; z <= 1; z++) {
				Location nl = l.add(x, 0, z);
				Block b = nl.getBlock();
				// set the block to its
				// metadata'd original block (if it has that)
				Block c = b.hasMetadata("originalblock") ? (Block) b
						.getMetadata("originalblock") : null;
				if (c != null) {
					nl.getBlock().setType(c.getType());
				}
			}
		}
	}

}
