package com.ngse.fight.specials;

import net.md_5.bungee.api.ChatColor;

import org.bukkit.Location;
import org.bukkit.Material;
import org.bukkit.block.Block;
import org.bukkit.entity.Player;
import org.bukkit.inventory.ItemStack;
import org.bukkit.metadata.FixedMetadataValue;

import com.ngse.fight.FIGHT;
import com.ngse.fight.classes.Ability;
import com.ngse.fight.classes.PassiveAbility;
import com.ngse.utilities.Toggle;

public class Hover extends PassiveAbility {

	public Hover() {
		super("Hover", 2, true, "hov");
	}

	@Override
	public void effect(Player user, Player target) {
		effect(user);
	}

	@Override
	public void effect(Player user) {
		// toggle hovering
		if (user.hasMetadata(getName())) {
			user.setMetadata(getName(),
					new FixedMetadataValue(FIGHT.plugin, ((Toggle) user
							.getMetadata(getName()).get(0).value()).toggle()));
			;
		} else {
			user.setMetadata(getName(), new FixedMetadataValue(FIGHT.plugin,
					new Toggle(true)));
		}
	}

	@Override
	public ItemStack getItem() {
		return Ability.setupItem(Material.FEATHER, this);
	}

	@Override
	public void passiveEffect(Player user) {
		Player p = user;

		if (p.hasMetadata(getName())) {
			if (isActive(user)) {
				// logging
				p.sendMessage(getName());
				Location l = p.getLocation();

				l.add(0, -1, 0).getBlock().setType(Material.GLASS);
				l.add(0, -1, 0)
						.getBlock()
						.setMetadata(
								"changed",
								new FixedMetadataValue(FIGHT.plugin,
										new Toggle(true)));

				for (int x = -1; x <= 1; x++) {
					for (int y = -1; y <= 1; y++) {
						for (int z = -1; z <= 1; z++) {
							// if (l.add(x, y, z).getBlock()
							// .hasMetadata("changed")
							// && ((Toggle) l.add(x, y, z).getBlock()
							// .getMetadata("changed")).b) {
							Location nl = new Location(user.getWorld(),
									l.getX() + x, l.getY() - 1, l.getZ() + z);
							if (!nl.getBlock().getType().isSolid()) {
								
								nl.getBlock().setType(Material.AIR);
								nl.getBlock().removeMetadata("changed",
										FIGHT.plugin);
								FIGHT.log("was glass so removed");
							} else {
								FIGHT.log("wasnt glass so didnt remove");
							}
						}
					}
				}

				for (int x = -1; x <= 1; x++) {
					for (int z = -1; z <= 1; z++) {

						/*
						 * FIGHT.log("x: " + x);; FIGHT.log("z: " + z); Location
						 * nl = l.add(x, -1, z); Block b = nl.getBlock();
						 * 
						 * // if (x == 2 || x == -2 || z == 2 || z == -2) { //
						 * // if on the outer edges, set the block to its // //
						 * metadata'd original block (if it has that) // if
						 * (b.hasMetadata("changed")) { // if (((Toggle)
						 * b.getMetadata("changed").get(0) // .value()).b) { //
						 * nl.getBlock().setType(Material.AIR); //
						 * b.removeMetadata("changed", FIGHT.plugin); // } // }
						 * // } else { // -- -- - - -- // set to glass if its
						 * air if (b.getType().equals(Material.AIR)) {
						 * b.setType(Material.GLASS); b.setMetadata("changed",
						 * new FixedMetadataValue( FIGHT.plugin, new
						 * Toggle(true))); }
						 */
						// }
					}
				}
			}
			if (((Toggle) p.getMetadata(getName()).get(0).value()).b) {
				p.sendMessage(ChatColor.LIGHT_PURPLE + "[HOVERING] "
						+ ChatColor.GREEN + "ON");
			} else {
				p.sendMessage(ChatColor.LIGHT_PURPLE + "[HOVERING] "
						+ ChatColor.RED + "OFF");
			}
		}
	}

	@Override
	public void endPassiveEffect(Player p) {
		Location l = p.getLocation();

		for (int x = -2; x <= 2; x++) {
			for (int z = -1; z <= 1; z++) {
				Location nl = l.add(x, 0, z);
				Block b = nl.getBlock();
				// set the block to its
				// metadata'd original block (if it has that)
				Block c = b.hasMetadata("originalblock") ? (Block) b
						.getMetadata("originalblock") : null;
				if (c != null) {
					nl.getBlock().setType(c.getType());
				}
			}
		}
	}

}
