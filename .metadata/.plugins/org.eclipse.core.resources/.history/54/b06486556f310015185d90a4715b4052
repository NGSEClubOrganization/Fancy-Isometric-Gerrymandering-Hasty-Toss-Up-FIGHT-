package com.ngse.fight;

import org.bukkit.entity.Player;
import org.bukkit.event.EventHandler;
import org.bukkit.event.Listener;
import org.bukkit.event.player.PlayerInteractEvent;

import com.ngse.fight.classes.FightClass;

public class ItemUseForAbilityListener implements Listener {

	@EventHandler
	public void onPlayerInteract(PlayerInteractEvent evt) {
		Player p = evt.getPlayer();

		p.sendMessage("Hey got the event, heres your info: "
				+ ((FightClass) p.getMetadata("fightclass")).getAbilities()
						.toString());

		// have to do this so dont cast null to FightClass by accident
		
		FightClass f;
		
		if(p.hasMetadata("fightclass")) {
			f = (FightClass) p.getMetadata("fightclass").get(0);
		}
		
		// FightClass f = p.getMetadata("fightclass").size() != 0 ? (FightClass) p
		// 		.getMetadata("fightclass").get(0) : null;
				
				

		if (f != null) {
			f.useAbility(p);
		}
	}

}
