package com.ngse.fight.classes;

public class Passive {
	
	public abstract void passiveEffect(Player p);

	public abstract void endPassiveEffect(Player p);

	public boolean usePassiveAbility(Player sender, Ability a) {
		if (a.useCost(sender)) {
			this.passiveEffect(sender);
			return true;
		} else {
			this.endPassiveEffect(sender);
		}
		return true;
	}

}
